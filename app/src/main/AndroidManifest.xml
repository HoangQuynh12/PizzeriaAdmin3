<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pizzeria"
        tools:targetApi="31">
        <activity
            android:name=".View.Product.AddProduct"
            android:exported="false"
            android:label="@string/title_activity_add_products"
            android:theme="@style/Theme.Pizzeria" />
        <activity
            android:name=".View.Category.AddType"
            android:exported="true"
            android:label="@string/title_activity_add_type"
            android:theme="@style/Theme.Pizzeria" />
        <activity
            android:name=".View.Product.UpdateProducts"
            android:exported="true"
            android:label="@string/title_activity_update_products"
            android:theme="@style/Theme.Pizzeria" />
        <activity
            android:name=".View.Category.UpdateCategory"
            android:exported="true"
            android:label="@string/title_activity_update_category"
            android:theme="@style/Theme.Pizzeria" />
        <activity
            android:name=".View.User.UpdateUser"
            android:exported="true"
            android:label="@string/title_activity_update_user"
            android:theme="@style/Theme.Pizzeria" />
        <activity
            android:name=".View.Category.CategoryDetails"
            android:exported="true"
            android:label="@string/title_activity_category_details"
            android:theme="@style/Theme.Pizzeria" />
        <activity
            android:name=".View.Order.OrderDetails"
            android:exported="true"
            android:label="@string/title_activity_order_details"
            android:theme="@style/Theme.Pizzeria" />
        <activity
            android:name=".View.Order.OrderManager"
            android:exported="true"
            android:label="@string/title_activity_ordermanager"
            android:theme="@style/Theme.Pizzeria" />
        <activity
            android:name=".View.Order.OrderPending"
            android:exported="true"
            android:label="@string/title_activity_orderpending"
            android:theme="@style/Theme.Pizzeria" />
        <activity
            android:name=".View.Order.OrderShipping"
            android:exported="true"
            android:label="@string/title_activity_ordershipping"
            android:theme="@style/Theme.Pizzeria" />
        <activity
            android:name=".View.Order.OrderCancelled"
            android:exported="true"
            android:label="@string/title_activity_ordercancelled"
            android:theme="@style/Theme.Pizzeria" />
        <activity
            android:name=".View.Order.OrderCompleted"
            android:exported="true"
            android:label="@string/title_activity_ordercompleted"
            android:theme="@style/Theme.Pizzeria" />
        <activity
            android:name=".View.Revenue.Revenue"
            android:exported="true"
            android:label="@string/title_activity_revenue"
            android:theme="@style/Theme.Pizzeria" />
        <activity
            android:name=".View.Product.ProductDetails"
            android:exported="true"
            android:label="@string/title_activity_product_details"
            android:theme="@style/Theme.Pizzeria" />
        <activity
            android:name=".View.User.UserInformation"
            android:exported="true"
            android:label="@string/title_activity_user_information"
            android:theme="@style/Theme.Pizzeria" />
        <activity
            android:name=".Login"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.Pizzeria" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Pizzeria">
            <!-- Define MainActivity as the main launcher activity -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
